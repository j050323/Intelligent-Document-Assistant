# 数据库配置
POSTGRES_DB=docassistant
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_strong_password_here

# JWT 配置（使用 openssl rand -base64 64 生成）
JWT_SECRET=your-secret-key-change-this-in-production-min-256-bits
JWT_ACCESS_TOKEN_EXPIRATION=86400000
JWT_REFRESH_TOKEN_EXPIRATION=2592000000

# 邮件配置
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Redis 配置（可选）
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# 应用配置
SPRING_PROFILES_ACTIVE=prod
SERVER_PORT=8080
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# 文件存储配置
FILE_STORAGE_TYPE=local
FILE_STORAGE_PATH=/app/uploads

# MinIO 配置（如果使用 MinIO 对象存储，取消注释并配置）
# FILE_STORAGE_TYPE=minio
# MINIO_ENDPOINT=http://minio:9000
# MINIO_ACCESS_KEY=minioadmin
# MINIO_SECRET_KEY=minioadmin
# MINIO_BUCKET_NAME=documents

# 文件上传限制
MAX_FILE_SIZE=100MB
MAX_REQUEST_SIZE=100MB

# 存储配额（每个用户的默认存储配额，单位：字节，默认 1GB）
DEFAULT_STORAGE_QUOTA=1073741824
